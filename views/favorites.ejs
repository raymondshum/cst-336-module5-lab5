<%- include ('partials/header.ejs') %>
<style>
  body {
    background-repeat: repeat;
    background-size:auto;
  }
</style>
<div id="favContainer" class="hero">
  <a href="/">Back to Search</a>
  
  <h1>Favorite Pics</h1>
  
  <% for (let i = 0; i < rows.length; i++) { %>
  
    <button class="btn btn-primary"><a class="keywordLink" href="#">
      <%= rows[i].keyword %>
    </a></button>
  
    <%- ((i+1) % 6 == 0) ? '<br><br>':'' %>
  <% }; %>

  <br><br>

  <div id="favorites"></div>
</div>


<input type="hidden" id="keywordSelected">

<%- include('partials/footer.ejs') %>